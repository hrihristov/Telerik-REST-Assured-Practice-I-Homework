<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Homework Suite">
    <test name="Create a story">
        <classes>
            <class name="jira.api.homework.CreateIssueTest">
                <methods>
                    <include name="createStoryTest"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Create a bug">
        <classes>
            <class name="jira.api.homework.CreateIssueTest">
                <methods>
                    <include name="createBugTest"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Link bug to Story">
        <classes>
            <class name="jira.api.homework.LinkIssuesTest">
                <methods>
                    <include name="bugBlocksStoryTest"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>